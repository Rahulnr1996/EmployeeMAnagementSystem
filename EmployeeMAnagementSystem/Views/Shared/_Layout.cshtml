<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title EMService</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        /* Sticky footer styles */
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            position: relative;
        }

        .body-content {
            flex: 1 0 auto; /* Flex grow, don't shrink, auto size */
        }

        .footer {
            position: absolute;
            bottom: 0;
            width: 100%;
            background-color: #f8f9fa; /* Light background color */
            padding: 10px 0; /* Padding for content inside footer */
        }
    </style>
</head>
<body style="background-color: #d4c6c5;">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light" style="background-color: #e3f2fd;">
        <div class="container">
            @Html.ActionLink("Employee Management System", "Index", "Home", new { area = "" }, new { @class = "navbar-brand project-name" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        <main>
            @RenderBody()
        </main>
        <hr />
    </div>
    <footer class="footer">
        <div class="container">
            <p class="text-center">Copyright &copy; @DateTime.Now.Year EMSystem.com All Rights Reserved</p>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
